{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "buildCommand": "docker build -t bloodleague-frontend .",
    "watchPatterns": ["frontend/bloodleague-web/**/*"]
  },
  "deploy": {
    "startCommand": "docker run -p 3000:3000 bloodleague-frontend",
    "healthcheckPath": "/",
    "healthcheckTimeout": 10,
    "restartPolicyType": "ON_FAILURE",
    "numReplicas": 1
  }
}